<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--  Root  -->
    <root level="error" additivity="false">
        <appender-ref ref="STDOUT" />
    </root>

    <!--  Loggers -->
    <logger name="org.apache" level="error">
    </logger>
    <logger name="org.opensextant" level="error">
    </logger>
    <logger name="org.opensextant.xtext" level="info">
    </logger>
    <logger name="org.opensextant.examples" level="info">
    </logger>

</configuration>
